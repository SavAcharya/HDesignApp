<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_bg" >

    <LinearLayout
        android:id="@+id/how_Layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <android.support.v4.view.ViewPager
            android:id="@+id/how_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/how_Layout1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp" >

        <ImageButton
            android:id="@+id/how_buttonPrevious"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            android:src="@drawable/back" />

        <ImageButton
            android:id="@+id/how_buttonNext"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            android:src="@drawable/forward" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/how_Layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        
        android:layout_above="@id/layoutFooterBar"
        android:orientation="vertical" >

        <Button
            android:id="@+id/how_buttonExit"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
          
            android:background="@drawable/orange_btn_bg"
            android:text="@string/skip_demo"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <com.hdesign.ui.FooterBar
        android:id="@+id/layoutFooterBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="invisible" />

</RelativeLayout>